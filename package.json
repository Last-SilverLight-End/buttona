  "version": "0.0.7",
  "type": "module",
  "types": "./dist/index.d.ts",
  "module": "./lib/esm/index.js",
  "main": "./lib/cjs/index.js",
  "license": "MIT",
  "files": [
    "lib/"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "clean": "rimraf lib",
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css dist/",
    "tsc-build": "npm run clean && tsc -p tsconfig-esm.json && tsc -p tsconfig-cjs.json && yarn copy-files",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "publish:npm": "npm run tsc-build && npm publish"
  },
  "dependencies": {
    "@hunterkiller404/buttona": "^0.0.6",
    "copyfiles": "^2.4.1",
    "path": "^0.12.7",
